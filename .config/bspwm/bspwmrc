#! /bin/sh

# visuals
bspc config border_width        2
bspc config window_gap          8
bspc config split_ratio         0.52
bspc config borderless_monocle  true
bspc config gapless_monocle     true
bspc config focused_border_color "#FF85AD"
bspc config active_border_color "#999999"
bspc config urgent_border_color "#FF3333"
bspc config presel_border_color "#3399FF"

#Left Monitor
bspc monitor DVI-D-0 -d I II III IV V

#Right Monitor
bspc monitor DVI-I-0 -d VI VII VIII IX X

# application rules
bspc rule -a Firefox desktop=^4
bspc rule -a qemu-system-i386 floating=on
