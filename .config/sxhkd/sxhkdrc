#
# bspwm general
#

super + alt + Escape
	bspc quit


super + {_,shift + }w
	bspc node --{close,kill}
	
#super + v
#	bspc control --toggle-visibility

super + t
	bspc desktop --layout next

super + x
	bspc node --state \~floating

super + f
	bspc node --flag private



#
# bspwm desktop movement
#

super + bracket{left,right}
	bspc desktop --focus {prev,next}

# change to specified desktop, shift to move window to specified desktop
super + {_,shift + }{1,2-6}
	bspc {desktop --focus,node --to-desktop} ^{6,1-5}





#
# bspwm window movement
#

super + {_,shift + }c
	bspc node --focus {next,prev}

super + grave
	bspc node --focus last

super + Tab
	if bspc wm --get-status | grep MHDMI-0 &> /dev/null ; then \
		bspc desktop --focus last.local; \
	else \
		bspc monitor --focus HDMI-0; \
	fi

super + apostrophe
	bspc node --swap last

super + m
	bspc node --swap biggest

super + {h,j,k,l}
	bspc node --swap {west,south,north,east}

super + {comma,period}
	bspc node @/ --circulate {backward,forward}

super + {r,shift + r,u}
	bspc node @/ --rotate {90,-90,180}

super + {backslash,shift + backslash}
	bspc node @/ --flip {vertical,horizontal}

# cycles through history of previously focused windows, disabling the history while cycling to preserve original
super + {o,i}
	bspc wm --record-history off; \
	bspc node {older,newer} --focus; \
	bspc wm --record-history on





#
# bspwm window sizing
#

# THESE 2 ARE BEING CHANGED AGAIN

# EXPAND the area of the current window
# super + alt + {h,j,k,l}
#	bspc node --resize {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# CONTRACT the area of the current window
#super + alt + shift + {h,j,k,l}
#	bspc node --resize {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# balance sizes of all windows in desktop to occupy the same area
super + b
	bspc node @/ --balance





#
# bspwm manual mode
#

super + ctrl + {h,j,k,l}
	bspc node --presel-dir {west,south,north,east}

super + ctrl + space
	bspc node --presel-dir cancel

# sets the ratio for the preselect area
super + ctrl + {1-9}
	bspc node --presel-ratio 0.{1-9}

# move window into the last preselect
super + y
	bspc node --to-node last.!automatic





#
# bspwm mouse functionality, don't touch these
#

~button1
	bspc pointer --grab focus

super + button{1-3}
	bspc pointer --grab {move,resize_side,resize_corner}

# pass x and y coordinates on movement to the above command
super + !button{1-3}
	bspc pointer --track %i %i

# on click release
super + @button{1-3}
	bspc pointer --ungrab





#
# wm independent hotkeys
#

super + shift + Return
	urxvt

super + z
	firefox

super + a
	amixer -q set Master 5%+ unmute

super + s
	amixer -q set Master 5%- unmute

super + shift + a
	amixer -q set Master toggle

super + shift + s
	mpc -q toggle

super + shift + {z,x}
	mpc -q {prev,next}

super + d
	~/scripts/timepopup.sh

Print
	scrot '/mnt/storage3t/images/snapshots/screen/%Y-%m-%d-%H%M%S_$wx$h.png'

alt + Print
	scrot -s '/mnt/storage3t/images/snapshots/screen/%Y-%m-%d-%H%M%S_$wx$h.png'

ctrl + Print
	~/scripts/ssupload.sh

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
