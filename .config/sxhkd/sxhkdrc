#
# bspwm general
#

super + alt + Escape
	bspc quit

super + w
	bspc window --close

super + v
	bspc control --toggle-visibility

super + t
	bspc desktop --layout next

super + {x,f}
	bspc window --toggle {floating,fullscreen}





#
# bspwm desktop movement
#

super + bracket{left,right}
	bspc desktop --focus {prev,next}

# change to specified desktop, shift to move window to specified desktop (hack to fix for my monitor order)
super + {_,shift + }{1-4,5,6-9,0}
	bspc {desktop --focus,window --to-desktop} ^{6-9,10,1-4,5}





#
# bspwm window movement
#

super + {_,shift + }c
	bspc window --focus {next,prev}

super + {grave,Tab}
	bspc {window,desktop} --focus last

super + apostrophe
	bspc window --swap last

super + m
	bspc window --swap biggest

super + {_,shift + }{h,j,k,l}
	bspc window --{focus,swap} {left,down,up,right}

super + {comma,period}
	bspc desktop --circulate {backward,forward}

super + {r,shift + r,u}
	bspc desktop --rotate {90,-90,180}

super + {backslash,shift + backslash}
	bspc desktop --flip {vertical,horizontal}

# cycles through history of previously focused windows, disabling the history while cycling to preserve original
super + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} --focus; \
	bspc control --record-history on





#
# bspwm window sizing
#

# EXPAND the area of the current window
super + alt + {h,j,k,l}
	bspc window --edge {left -10,down +10,up -10,right +10}

# CONTRACT the area of the current window
super + alt + shift + {h,j,k,l}
	bspc window --edge {right -10,up +10,down -10,left +10}

# balance sizes of all windows in desktop to occupy the same area
super + b
	bspc desktop --balance





#
# bspwm manual mode
#

super + ctrl + {h,j,k,l}
	bspc window --presel {left,down,up,right}

super + ctrl + {_,shift + }space
	bspc {window --presel cancel,desktop --cancel-presel}

# sets the ratio for the preselect area
super + ctrl + {1-9}
	bspc window --ratio 0.{1-9}

# move window into the last preselect
super + y
	bspc window --to-window last.manual





#
# bspwm mouse functionality, don't touch these
#

~button1
	bspc pointer --grab focus

super + button{1-3}
	bspc pointer --grab {move,resize_side,resize_corner}

# pass x and y coordinates on movement to the above command
super + !button{1-3}
	bspc pointer --track %i %i

# on click release
super + @button{1-3}
	bspc pointer --ungrab





#
# wm independent hotkeys
#

super + shift + Return
	urxvt

super + z
	firefox

super + a
	amixer -q set Master 5%+ unmute

super + s
	amixer -q set Master 5%- unmute

super + shift + a
	amixer -q set Master toggle

super + shift + s
	mpc -q toggle

super + shift + {z,x}
	mpc -q {prev,next}

super + d
	~/scripts/timepopup.sh

Print
	scrot '/mnt/storagetoshiba/images/%Y-%m-%d-%H%M%S_$wx$h.png'

alt + Print
	scrot -s '/mnt/storagetoshiba/images/%Y-%m-%d-%H%M%S_$wx$h.png'

ctrl + Print
	~/scripts/ssupload.sh

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
